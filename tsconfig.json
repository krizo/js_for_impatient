{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    
    "strict": true,
    // Undo some of "strict", so plain JS works *and* is checked:
    "noImplicitAny": false,
  },
  "include": [
    "exercises/**/*",
    "demos/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
